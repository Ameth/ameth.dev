---
import Icon from './Icon.astro'
import { iconPaths } from './IconPaths'
import { FormatDate } from '../utils/functions'

interface Props {
  title: string
  date: any
  slug?: string
  icon?: keyof typeof iconPaths | string
  description?: string | undefined
}
const { title, date, icon = 'code', description, slug } = Astro.props
---

<article>
  <a
    class='block rounded-xl border border-gray-800 p-8 shadow-xl transition hover:border-pink-500/10 hover:shadow-pink-500/10 h-full'
    href={`/blog/${slug}`}
  >
    <Icon icon={icon} size='2em' />

    <h2 class='mt-4 text-xl font-bold text-white'>{title}</h2>

    <p class='mt-1 text-sm text-gray-300'>
      {FormatDate(date)}
    </p>
  </a>
</article>
